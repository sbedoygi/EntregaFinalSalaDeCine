@model Cine_Nauta.Models.AddFunctionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Crear Función</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFunction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />
            <input type="hidden" asp-for="Rooms" />

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" asp-items="Model.Rooms" class="form-control"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FunctionDate" class="control-label"></label>
                <input asp-for="FunctionDate" class="form-control" value="DateTime.Now" />
                <span asp-validation-for="FunctionDate" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model?.MovieId" class="btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}