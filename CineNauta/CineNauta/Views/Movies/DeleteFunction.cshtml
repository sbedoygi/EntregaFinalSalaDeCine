@model Cine_Nauta.DAL.Entities.Function

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Eliminar función</h1>

<h3>Are you sure you want to delete this?</h3>
<div>

    <partial name="../Shared/PartialViews/_FunctionDetailDelete" />

    <form asp-action="DeleteFunction">
        <input type="hidden" asp-for="Id" />
        <input type="submit" asp-route-functionId="@Model?.Id" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Details" asp-route-id="@Model?.Movie.Id" class="btn btn-outline-secondary">Regresar</a>
    </form>
</div>

