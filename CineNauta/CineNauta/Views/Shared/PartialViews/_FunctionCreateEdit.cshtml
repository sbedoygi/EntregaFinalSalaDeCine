@model Cine_Nauta.Models.EditFunctionViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Price" class="control-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="FunctionDate" class="control-label"></label>
    <input asp-for="FunctionDate" class="form-control" />
    <span asp-validation-for="FunctionDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="RoomId" class="control-label"></label>
    <select asp-for="RoomId" asp-items="Model.Rooms" class="form-control"></select>
    <span asp-validation-for="RoomId" class="text-danger"></span>
</div>
<br />

