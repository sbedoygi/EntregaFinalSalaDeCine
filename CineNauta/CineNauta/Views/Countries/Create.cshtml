@model Cine_Nauta.DAL.Entities.Country

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Crear país</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">

                    <partial name="../Shared/PartialViews/_CountryCreateEdit" />

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
