@model Cine_Nauta.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Crear ciudad</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddCity">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StateId" />

                    <partial name="../Shared/PartialViews/_CityCreateEdit" />

                    <div class="form-group">
                        <input type="submit" value="Crear Ciudad" class="btn btn-outline-primary" />
                        <a asp-action="DetailsState" asp-route-stateId="@Model?.StateId" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}