@model Cine_Nauta.DAL.Entities.Country

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Detalles país</h1>
        <div>
            <partial name="../Shared/PartialViews/_CountryDetailDelete" />
        </div>
        <div>
            <br />
            <a asp-action="AddState" asp-route-countryId="@Model?.Id" class="btn btn-outline-primary">Agregar Dpto/Esdtado</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Editar</a>
            <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Estados</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-borderless table-light table-hover table-responsive" id="StateTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.States.FirstOrDefault().Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.States.FirstOrDefault().CitiesNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.States.FirstOrDefault().CreatedDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.States.FirstOrDefault().ModifiedDate)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.States)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CitiesNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                                        </td>
                                        <td>
                                            <a asp-action="EditState" asp-route-stateId="@item.Id" class="btn btn-outline-warning">Editar</a>
                                            <a asp-action="DetailsState" asp-route-stateId="@item.Id" class="btn btn-outline-info">Detalles</a>
                                            <a asp-action="DeleteState" asp-route-stateId="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#StateTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "Todos"]
                ]
            });
        });
    </script>
    }
