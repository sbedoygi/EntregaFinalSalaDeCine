@model Cine_Nauta.Models.StateViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Crear estado</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddState">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CountryId" />

                    <partial name="../Shared/PartialViews/_StateCreateEdit" />

                    <div class="form-group">
                        <input type="submit" value="Crear Estado" class="btn btn-outline-primary" />
                        <a asp-action="Details" asp-route-id="@Model?.CountryId" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}