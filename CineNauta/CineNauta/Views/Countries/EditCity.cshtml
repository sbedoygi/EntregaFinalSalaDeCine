@model Cine_Nauta.Models.CityViewModel


@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class=" text-center rounded-pill div-title">Editar ciudad</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditCity">

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="StateId" />

                    <partial name="../Shared/PartialViews/_CityCreateEdit" />

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                        <a asp-action="DetailsState" asp-route-stateId="@Model?.StateId" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}