@model Cine_Nauta.Models.SeatViewModel


@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <main role="main" class="pb-3 p-3">
        <h1 class="text-center rounded-pill div-title">Crear Asiento</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddSeat">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RoomId" />

                    <div class="form-group">
                        <label asp-for="NumberSeat" class="control-label"></label>
                        <input asp-for="NumberSeat" class="form-control" />
                        <span asp-validation-for="NumberSeat" class="text-danger"></span>
                    </div>  
                    <br />

                    <div class="form-group">
                        <input type="submit" value="Crear Asiento" class="btn btn-outline-primary" />
                        <a asp-action="Details" asp-route-id="@Model?.RoomId" class="btn btn-outline-success">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}