@model Cine_Nauta.DAL.Entities.Room

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Crear Sala</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberRoom" class="control-label"></label>
                <input asp-for="NumberRoom" class="form-control" />
                <span asp-validation-for="NumberRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeRoom" class="control-label"></label>
                <select asp-for="TypeRoom" class="form-control">
                    <option value="">Seleccione el tipo de sala</option>
                    <option value="Sencilla">Sencilla</option>
                    <option value="3D">3D</option>
                    <!-- Agrega más opciones según sea necesario -->
                </select>
                <span asp-validation-for="TypeRoom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}